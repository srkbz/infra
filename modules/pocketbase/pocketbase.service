[Unit]
Description = pocketbase

[Service]
Type             = simple
User             = ${POCKETBASE_USER}
Group            = ${POCKETBASE_USER}
LimitNOFILE      = 4096
Restart          = always
RestartSec       = 5s
WorkingDirectory = ${POCKETBASE_HOME}
ExecStart        = ${POCKETBASE_BIN} serve --http ${POCKETBASE_HOST}:${POCKETBASE_PORT}

[Install]
WantedBy = multi-user.target
